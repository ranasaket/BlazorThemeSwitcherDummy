                 <SfButton CssClass="e-info" style="margin-left:3px;">Verify</SfButton>
                    <SfButton CssClass="e-danger" style="margin-left:3px;">Save Changes</SfButton>
                
                
                </div>
                </CardContent>
                </SfCard>

                </div>
                </div>

    <div class="row mb-2">

        <div class="col-lg-12">

                <SfCard style="border-radius:10px;">
                    <CardContent>

                <div class="row">
                    <div class="col-lg-12">
                        <h5 style="font-family:'Times New Roman', Times, serif;">Advance Configurations</h5>
                    </div>


                        <div class="col-lg-12">
